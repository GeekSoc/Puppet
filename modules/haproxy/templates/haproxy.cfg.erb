# this config needs haproxy-1.1.28 or haproxy-1.2.1

global
    log 127.0.0.1   local0
    log 127.0.0.1   local1 notice
    #log loghost    local0 info
    maxconn 4096
    #chroot /usr/share/haproxy
    user haproxy
    group haproxy
    daemon
    #debug
    #quiet
    stats socket /etc/haproxy/haproxysock level admin

defaults
    log global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    maxconn 2000
    timeout connect  5000
    timeout client  50000
    timeout server  50000
    errorfile 400 /etc/haproxy/errors/400.http
    errorfile 403 /etc/haproxy/errors/403.http
    errorfile 408 /etc/haproxy/errors/408.http
    errorfile 500 /etc/haproxy/custom_errors/500.http
    errorfile 502 /etc/haproxy/custom_errors/502.http
    errorfile 503 /etc/haproxy/custom_errors/503.http
    errorfile 504 /etc/haproxy/custom_errors/504.http

# Backend Servers
backend tauron
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server tauron 130.159.141.117:80 weight 1 maxconn 10000

backend mun
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server tauron 130.159.141.90:80 weight 1 maxconn 10000

backend mirror
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server mirror 130.159.141.98:80 weight 1 maxconn 10000

backend idran
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server idran 130.159.141.81:80 weight 1 maxconn 10000
#    server vm 130.159.141.73:80 weight 1 maxconn 10000

backend socs
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server socs 130.159.141.72:80 weight 1 maxconn 10000
    
backend idran_etherpad
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server idran_etherpad 130.159.141.81:9001 weight 1 maxconn 10000

backend linn_fusion_web
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server socs 130.159.141.109:80 weight 1 maxconn 10000

backend linn_fusion_stream
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server socs 130.159.141.109:8000 weight 1 maxconn 10000
    
backend ambition
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server ambition 130.159.141.91:3000 weight 1 maxconn 10000

backend allspark
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server energon 130.159.141.90:9000 weight 1 maxconn 10000

backend phpallspark
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server energon 130.159.141.90:80 weight 1 maxconn 10000

backend irc
    mode http
    timeout connect 5s
    timeout server 5m
    balance roundrobin
    option httpchk
    server hive 130.159.141.66:9090 weight 1 maxconn 10000

backend st-web
    mode http
    timeout connect 5s
    timeout server 1h
    balance roundrobin
    option httpchk
    server pidgeot 130.159.141.113:80 weight 1 maxconn 10000

backend st-owncloud
    mode http
    timeout connect 5s
    timeout server 1h
    balance roundrobin
    option httpchk
    server pidgeot 130.159.141.114:80 weight 1 maxconn 10000
    
# HTTP Reverse Proxy
listen  http 0.0.0.0:80
    mode http
    option forwardfor
    option http-server-close
    option http-pretend-keepalive

    stats enable
    stats auth admin:<%= scope.function_extlookup(["haproxy_stats_pw"]) %>

    acl req_nagios hdr_dom(host) -i nagios
    acl req_munin hdr_dom(host) -i munin
    acl req_mirror hdr_dom(host) -i mirror
    acl req_etherpad hdr_dom(host) -i etherpad
    acl req_socs hdr_dom(host) -i clubs
    acl req_seds hdr_dom(host) -i strathseds.org
    acl req_fusion_web hdr_dom(host) -i www.strathclydefusion.com
    acl req_fusion_stream hdr_dom(host) -i stream.strathclydefusion.com
    acl req_ambition hdr_dom(host) -i delta.dev.geeksoc.org
    acl req_allspark hdr_dom(host) -i allspark.geeksoc.org
    acl req_phpallspark hdr_dom(host) -i php.allspark.geeksoc.org
    acl req_webchat hdr_dom(host) -i webchat.geeksoc.org
    acl req_st-website hdr_dom(host) -i strathtech.co.uk
    acl req_st-website hdr_dom(host) -i www.strathtech.co.uk
    acl req_st-owncloud hdr_dom(host) -i owncloud.strathtech.co.uk


    default_backend idran #by default forward the requests to idran
    use_backend mun if req_nagios
    use_backend tauron if req_munin
    use_backend mirror if req_mirror
    use_backend idran_etherpad if req_etherpad
    use_backend socs if req_socs
    use_backend socs if req_seds
    use_backend linn_fusion_web if req_fusion_web
    use_backend linn_fusion_stream if req_fusion_stream
    use_backend ambition if req_ambition
    use_backend allspark if req_allspark
    use_backend phpallspark if req_phpallspark
    use_backend irc if req_webchat
    use_backend st-web if req_st-website
    use_backend st-owncloud if req_st-owncloud

# Send SSL traffic to Idran (in TCP mode - no SSL termination here)
listen  https 0.0.0.0:443
    mode tcp
    option tcplog
    balance roundrobin
    server idran 130.159.141.81:443
#    server vm 130.159.141.73:443
